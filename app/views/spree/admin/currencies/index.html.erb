<% content_for :page_title do %>
  <%= Spree.t(:currencies) %>
<% end %>
<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_currency), new_admin_currency_url, { :class => "btn-success", :icon => 'plus', :id => 'admin_new_dish_type' } %>
<% end if can?(:create, :Currency) %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-md-4"><%= Spree.t(:name) %></th>
      <th class="col-md-4">Tools</th>
    </tr>
  </thead>

  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td ><%= currency.name %></td>
        <td class="actions" data-hook="admin_products_index_row_actions">
            <%= link_to_edit currency, :no_text => true, :class => 'edit' if can?(:edit, currency) %>
            &nbsp;
            <%= link_to_delete currency, :no_text => true if can?(:delete, currency) %>
          </tds>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

